generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Guilds {
  id String @id @default(uuid())
  guildId String @unique
  name String
  avatar String?
  memberCount Int?

  createdAT DateTime @default(now())
  tickets GuildToMemberTickets[]

  @@index([guildId])
}

model Members {
  id String @id @default(uuid())
  discordId String @unique
  guildId String @unique
  name String
  avatar String?
  banner String?
  tickets GuildToMemberTickets[] // one-to-many
  createdAT DateTime @default(now())

  @@index([discordId, guildId])
}

model Tickets {
  id String @id @default(uuid())
  name String
  messages String?
  channelId String?
  createdAT DateTime @default(now())
  tickets GuildToMemberTickets[]
}

model GuildToMemberTickets {
  id String @id @default(uuid())
  guild Guilds @relation(fields: [guildId], references: [guildId])
  guildId String
  member Members @relation(fields: [memberId], references: [id])
  memberId String
  ticket Tickets @relation(fields: [ticketId], references: [id])
  ticketId String
}

