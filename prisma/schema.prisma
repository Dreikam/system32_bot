generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Guilds {
  id String @id @default(uuid())
  guildId String @unique
  name String
  avatar String?
  memberCount Int?
  createdAT DateTime @default(now())
  tickets Tickets?
  members MemberGuilds[]
  premium Premium[]

  @@index([guildId])
}

model Members {
  id String @id @default(uuid())
  discordId String @unique
  name String
  avatar String?
  banner String?
  premium Premium[]
  createdAT DateTime @default(now())

  guilds MemberGuilds[]
  @@index([discordId])
}

model MemberGuilds {
  id String @id @default(uuid())
  guild Guilds @relation(fields: [guildId], references: [guildId])
  guildId String
  member Members @relation(fields: [memberId], references: [discordId])
  memberId String
  ticketId String
  ticket GuildToMemberTickets @relation(fields: [ticketId], references: [id])
  createdAt DateTime @default(now())
}

model Tickets {
  id String @id @default(uuid())
  name String
  channelId String?
  createdAT DateTime @default(now())
  tickets GuildToMemberTickets[]
  guild Guilds @relation(fields: [guildId], references: [guildId])
  guildId String @unique
}

model GuildToMemberTickets {
  id String @id @default(uuid())
  messages String?
  memberId String
  ticketId String
  member MemberGuilds[]
  ticket Tickets @relation(fields: [ticketId], references: [id])
}

model Premium {
  id String @id @default(uuid())
  guild Guilds @relation(fields: [guildId], references: [guildId])
  guildId String @unique
  member Members @relation(fields: [memberId], references: [discordId])
  memberId String @unique
  token Tokens @relation(fields: [tokenId], references: [id])
  tokenId String @unique
  redeemedOn DateTime @default(now())
}

model Tokens {
  id String @id @default(uuid())
  token String @unique
  premium Premium[]
  createdAt DateTime @default(now())
}

